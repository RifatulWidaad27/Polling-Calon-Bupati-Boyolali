	<form id="form-voting" class="form-horizontal">
		<div class="form-group">
			<label for="first_name" class="col-sm-2 control-label">First Name:</label>
			<div class="col-sm-10">
				<input type="text" name="first_name" id="first_name" class="form-control required" />
			</div>
		</div>
		
		<div class="form-group">
			<label for="surname" class="col-sm-2 control-label">Surname:</label>
			<div class="col-sm-10">
				<input type="text" name="surname" id="surname" class="form-control required" />
			</div>
		</div>
		
		<div class="form-group">
			<label for="email" class="col-sm-2 control-label">Email:</label>
			<div class="col-sm-10">
				<input type="email" name="email" id="email" class="form-control required" />
			</div>
		</div>
		
		<div class="form-group">
			<label for="constituency" class="col-sm-2 control-label">Constituency:&nbsp;</label>
			<div class="col-sm-10">
				<select name="constituency" id="constituency">
					<option value="" disabled selected>Select a constituency</option>
					{{buildOptions constituencyOptions}}
				</select>
			</div>
		</div>
		
		<div class="form-group">
			<label class="col-sm-2 control-label">Are you going to vote?&nbsp;</label>
			<div class="col-sm-10">
				<input type="radio" name="voting" id="voting-yes" value="1" />&nbsp;<label for="voting-yes">Yes</label>
				&nbsp;<input type="radio" name="voting" id="voting-no" value="0" checked />&nbsp;<label for="voting-no">No</label>
			</div>
		</div>
		
		<div class="form-group hidden question_2">
			<!-- Hidden unless first question is answered yes - use Backbone events -->
			<label for="candidate" class="col-sm-2 control-label">Who are you going to vote for?&nbsp;</label>

			<div class="col-sm-10">			
				<!-- Populated via AJAX with the candidates for the constituency specified above -->
				<select name="candidate" id="candidate">
					<option value="" disabled selected>Select a candidate</option>
					<!-- Prepend candidate options via AJAX if a constituency is selected -->
					{{buildOptions candidateOptions}}
				</select>
			</div>
		</div>
		
		<div class="form-group">
			<div class="col-sm-2">
				
			</div>
			<div class="col-sm-10">
				<button type="submit" class="btn btn-default">Submit</button>
			</div>
		</div>
	</form>
</div>